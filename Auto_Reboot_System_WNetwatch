/tool netwatch add comment="Reset_SI_4GDOWN_15MINUTES" down-script="log info \"Perte du ping vers 8.8.8.8 - Demarrage du compte a rebours de 15 minutes avant reboot\" ; /system script run Reboot;" host=8.8.8.8 timeout=10s up-script="log info \"Ping 8.8.8.8 OK\""
/
/system script add dont-require-permissions=yes name=Reboot owner=admin policy=ftp,reboot,read,write,policy,test,password,sniff,sensitive,romon source=":if ([/ping 8.8.8.8 interval=5 count=180] =0) do={log info \"4GDOWN depuis 15 minutes (NETWATCH), redemarrage du systeme\" ; /system reboot}"